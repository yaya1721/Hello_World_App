<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:background="@color/blue"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Hello from Sonya!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="40sp" />




    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#FDA2CF"
        android:text="Click to change the text code"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:textSize="25sp"
         />

    <TextView
        android:id="@+id/changeBgBtn"
        android:layout_above="@+id/button"
        android:background="#FDA2CF"
        android:textSize="21.7sp"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to change background color" />

    <TextView
        android:id="@+id/changeTextBtn"
        android:layout_above="@+id/changeBgBtn"
        android:background="#FDA2CF"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to change text" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/changeTextBtn"
        android:textSize="25sp"
        android:ems="10"
        android:hint="Create your own text"
         />
    <TextView
        android:id="@+id/changeCustomTextBtn"
        android:layout_above="@+id/editText"
        android:background="#FDA2CF"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to change to custom text" />


</RelativeLayout>